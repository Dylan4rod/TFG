`timescale 1ns/1ps

module monitor(input wreal rising_edge, falling_edge,  // Salidas del DUT
               input mailbox dut2mon,                 // De DUT al monitor
               input mailbox mon2chk);                // Del monitor al checker

  real signal_rising, signal_falling;

  always @(rising_edge or falling_edge) begin
    signal_rising = rising_edge;
    signal_falling = falling_edge;

    // Pasa las se√±ales al checker
    mon2chk.put(signal_rising);
    mon2chk.put(signal_falling);
  end

endmodule

